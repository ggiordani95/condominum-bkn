{
  "name": "secx-backend",
  "version": "1.0.0",
  "description": "Condominum backend application",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:build": "docker-compose build",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:deploy": "bunx prisma migrate deploy",
    "db:studio": "bunx prisma studio",
    "db:reset": "bunx prisma migrate reset",
    "setup": "bun install && bun run docker:up && bun run db:push",
    "setup:dev": "bun run docker:up && bun run db:push && bun run dev"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "11.1.0",
    "@fastify/jwt": "10.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "5.2.3",
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.15.5",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "glob": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.17.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/bun": "^1.3.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "24.8.1",
    "@vitest/ui": "3.2.4",
    "bun-types": "^1.0.25",
    "postgres": "^3.4.5",
    "vitest": "3.2.4"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
